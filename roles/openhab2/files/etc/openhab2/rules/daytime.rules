import org.openhab.core.library.types.*
import org.openhab.core.persistence.*
import org.openhab.model.script.actions.*

var float elevation
var float lastElevation

rule "Daylight Calculation"
when
    Time cron "0 * * * * ?"
then
    lastElevation = elevation
    elevation = (SunElevation.state as DecimalType).floatValue

    if (null == lastElevation) {
        return true
    }

    // Sunset at 15 degrees
    if (lastElevation > 15 && elevation <= 15) {
        OfficeDeskLight.sendCommand(ON)
    }

    // Sunset at 5 degrees
    if (lastElevation > 5 && elevation <= 5) {
        LivingRoomFloorLight.sendCommand(100)
    }
end

rule "Late Night"
when
    Time cron "0 0 2 * * ?"
then
    LivingRoomFloorLight.sendCommand(0)
end

rule "Late Late Night"
when
    Time cron "0 0 3 * * ?"
then
    OfficeDeskLight.sendCommand(OFF)
end
